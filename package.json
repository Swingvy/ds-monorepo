{
    "name": "root",
    "private": true,
    "engines": {
        "yarn": ">=1.21.1"
    },
    "workspaces": [
        "packages/*"
    ],
    "test": "jest",
    "scripts": {
        "bootstrap": "lerna bootstrap --use-workspaces",
        "type-check": "tsc --noEmit",
        "type-check:watch": "npm run type-check -- --watch",
        "dev": "start-storybook -p 5555",
        "coverage": "jest --coverage",
        "unit": "jest",
        "test": "lerna run test",
        "new-version": "lerna version --conventional-commits --yes",
        "diff": "lerna diff",
        "release": "yarn lint && yarn build && lerna publish",
        "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|less|md)\"",
        "lint": "eslint .",
        "clear": "lerna exec --parallel -- yarn clear",
        "compile:ts": "lerna exec --parallel -- yarn compile:ts",
        "compile:js": "lerna exec --parallel -- yarn compile:js",
        "compile": "yarn clear && yarn compile:js && yarn compile:ts"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.7",
        "@babel/preset-env": "^7.7.7",
        "@babel/preset-react": "^7.7.4",
        "@babel/preset-typescript": "^7.7.7",
        "@types/jest": "^24.0.25",
        "@types/styled-components": "^4.4.2",
        "@typescript-eslint/eslint-plugin": "^2.15.0",
        "@typescript-eslint/parser": "^2.15.0",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-styled-components": "^1.10.6",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.9.0",
        "eslint-import-resolver-lerna": "^1.1.0",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "glob": "^7.1.6",
        "husky": "^4.0.1",
        "jest": "^24.9.0",
        "jest-haste-map": "^24.9.0",
        "jest-resolve": "^24.9.0",
        "jest-styled-components": "^6.3.4",
        "lerna": "^3.20.2",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-test-renderer": "^16.12.0",
        "webpack": "^4.41.5",
        "yarn": "^1.21.1"
    },
    "dependencies": {
        "@babel/polyfill": "^7.7.0",
        "@storybook/react": "^5.3.1",
        "core-js": "3.6.2",
        "typescript": "^3.7.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": ""
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,css,less}": [
            "npm run format",
            "eslint . --fix",
            "git add"
        ]
    }
}
