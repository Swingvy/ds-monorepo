{
    "name": "root",
    "private": true,
    "engines": {
        "yarn": ">=1.21.1"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap --use-workspaces",
        "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.story.js,**/*.spec.js",
        "dev": "start-storybook -p 5555",
        "coverage": "jest --coverage",
        "unit": "jest",
        "test": "lerna run test",
        "new-version": "lerna version --conventional-commits --yes",
        "diff": "lerna diff",
        "build:babel": "lerna exec --parallel -- babel src -d lib",
        "build:webpack": "lerna run build:webpack",
        "build2": "yarn build:babel && yarn build:webpack",
        "release": "yarn lint && yarn build && lerna publish",
        "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|less|md)\"",
        "lint": "eslint ."
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.7",
        "@babel/preset-env": "^7.7.7",
        "@babel/preset-react": "^7.7.4",
        "@storybook/react": "^5.2.8",
        "@typescript-eslint/eslint-plugin": "^2.15.0",
        "@typescript-eslint/parser": "^2.15.0",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-styled-components": "^1.10.6",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "husky": "^4.0.1",
        "jest": "^24.9.0",
        "jest-haste-map": "^24.9.0",
        "jest-resolve": "^24.9.0",
        "jest-styled-components": "^6.3.4",
        "lerna": "^3.20.2",
        "lint-staged": "^9.5.0",
        "prettier": "1.19.1",
        "pretty-quick": "^2.0.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-test-renderer": "^16.12.0",
        "styled-components": "^4.4.1",
        "webpack": "^4.41.5",
        "yarn": "^1.21.1"
    },
    "dependencies": {
        "typescript": "^3.7.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,css,less}": [
            "npm run format",
            "eslint --fix",
            "git add"
        ]
    }
}
