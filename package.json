{
    "name": "root",
    "private": true,
    "engines": {
        "yarn": ">=1.21.1"
    },
    "workspaces": [
        "packages/*"
    ],
    "test": "jest",
    "scripts": {
        "dev": "start-storybook -p 5555",
        "coverage": "jest --coverage",
        "unit": "jest",
        "test": "lerna run test",
        "diff": "lerna diff",
        "release": "yarn lint && yarn build && lerna publish",
        "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|less|md)\"",
        "lint": "eslint .",
        "initialize": "lerna clean && yarn install && lerna bootstrap --use-workspaces && lerna link convert",
        "clean:output": "lerna exec --parallel -- yarn clean:output",
        "compile:ts": "lerna exec --parallel -- yarn compile:ts",
        "compile:js": "lerna exec --parallel -- yarn compile:js",
        "compile": "yarn clean:output && yarn compile:js && yarn compile:ts",
        "new-version": "lerna version --conventional-commits"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.8.0",
        "@babel/preset-env": "^7.7.7",
        "@babel/preset-react": "^7.7.4",
        "@babel/preset-typescript": "^7.7.7",
        "@commitlint/cli": "^8.3.4",
        "@commitlint/config-conventional": "^8.3.4",
        "@commitlint/config-lerna-scopes": "^8.3.4",
        "@storybook/core": "^5.3.1",
        "@types/jest": "^24.0.25",
        "@types/react-test-renderer": "^16.9.1",
        "@types/styled-components": "^4.4.2",
        "@typescript-eslint/eslint-plugin": "^2.15.0",
        "@typescript-eslint/parser": "^2.15.0",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-styled-components": "^1.10.6",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.9.0",
        "eslint-import-resolver-lerna": "^1.1.0",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "glob": "^7.1.6",
        "husky": "^4.0.1",
        "jest": "^24.9.0",
        "jest-haste-map": "^24.9.0",
        "jest-resolve": "^24.9.0",
        "jest-styled-components": "^6.3.4",
        "lerna": "^3.20.2",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "react": "^16.12.0",
        "react-docgen": "^5.1.0",
        "react-dom": "^16.12.0",
        "react-test-renderer": "^16.12.0",
        "ts-jest": "^24.3.0",
        "yarn": "^1.21.1"
    },
    "dependencies": {
        "@sds/button": "file:packages/button",
        "@sds/input": "file:packages/input",
        "@sds/theme": "file:packages/theme"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "post-commit": "echo '\n\nğŸº ğŸº ğŸº ğŸº ğŸº  !!commit success!! ğŸº ğŸº ğŸº ğŸº ğŸº\n\n' && lerna changed -l"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx,css,less}": [
            "yarn format",
            "yarn lint",
            "git add"
        ]
    }
}
